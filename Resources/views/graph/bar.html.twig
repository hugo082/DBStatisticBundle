<canvas id="bar_{{ graph.id }}" width="100" height="100"></canvas>

<script>

    var ctx = "bar_{{ graph.id }}";
    var data = {
        labels: [{{ graph.data.labels|raw }}],
        datasets: [
            {
                label: "My First dataset",
                data: [{{ graph.data.values|raw }}],
                backgroundColor: [{{ graph.data.backgroundColors|raw }}],
                hoverBackgroundColor: [
                    "#FF6384",
                    "#36A2EB"
                ]
            }]
    };

    var myDoughnutChart = new Chart(ctx, {
        type: 'bar',
        data: data,
        options: {
            scales: {
                yAxes: [{
                    ticks: {
                        max: 5,
                        min: 0,
                        stepSize: 0.5
                    }
                }]
            }
        }
    });
</script>